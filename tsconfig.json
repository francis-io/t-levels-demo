{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "$lib/*": ["src/lib/*"]
    },
    "strictNullChecks": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": ["src/**/*", "*.config.*"],
  "exclude": ["node_modules", "dist"]
}
