---
import ParticleBackground from '../../components/effects/ParticleBackground.svelte';
import Footer from '../../components/layout/Footer.svelte';
import Header from '../../components/layout/Header.svelte';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLessons } from '../../lib/utils/lessons';

const lessons = getLessons();
---

<BaseLayout title="Lessons" description="Interactive classroom lesson delivery modes for Lean 5S and 8 Wastes Walk sessions.">
	<Header slot="header" currentPath="/lessons" client:load />

	<ParticleBackground class="bg-gradient-to-br from-brand-navy to-[#2D2A5A]" client:visible>
		<section class="py-16 text-white tablet:py-24">
			<div class="mx-auto max-w-7xl px-4 tablet:px-6">
				<div class="mx-auto max-w-3xl text-center">
					<h1 class="mb-6 text-4xl font-display font-bold tablet:text-5xl desktop:text-6xl">
						Lessons
					</h1>
					<p class="text-lg text-gray-200 tablet:text-xl">
						Launch lesson delivery with 8 mode layouts, full source transcript fidelity, and classroom-ready timing guidance.
					</p>
				</div>
			</div>
		</section>
	</ParticleBackground>

	<section class="bg-gray-50 py-12 tablet:py-16">
		<div class="mx-auto grid max-w-7xl gap-4 px-4 tablet:grid-cols-2">
			{lessons.map((lesson) => (
				<a href={`/lessons/${lesson.slug}?view=storyboard`} class="rounded-xl border border-gray-200 bg-white p-6 card-hover">
					<p class="text-xs font-semibold uppercase tracking-wide text-gray-500">{lesson.durationMins} minutes</p>
					<h2 class="mt-2 text-2xl font-display font-bold text-brand-navy">{lesson.title}</h2>
					<p class="mt-2 text-sm text-gray-700">{lesson.audience}</p>
					<p class="mt-3 text-sm text-gray-600">{lesson.outcomes[0]}</p>
					<div class="mt-4 text-sm font-semibold text-brand-cyan">Open lesson</div>
				</a>
			))}
		</div>
	</section>

	<Footer slot="footer" />
</BaseLayout>
