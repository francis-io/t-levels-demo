---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
	title="Page Not Found"
	description="The page you're looking for doesn't exist or has been moved"
>
	<div class="min-h-[80vh] flex items-center justify-center px-4">
		<div class="text-center max-w-2xl">
			<!-- Large 404 -->
			<div class="mb-8">
				<span class="text-9xl tablet:text-[12rem] font-display font-bold text-brand-navy opacity-20">
					404
				</span>
			</div>

			<!-- Heading -->
			<h1 class="text-3xl tablet:text-4xl desktop:text-5xl font-display font-bold text-brand-navy mb-4">
				Page Not Found
			</h1>

			<!-- Description -->
			<p class="text-lg tablet:text-xl text-gray-600 mb-12 max-w-lg mx-auto">
				The page you're looking for doesn't exist or has been moved.
			</p>

			<!-- CTA Button -->
			<div class="mb-12">
				<a
					href="/"
					class="inline-block px-8 py-4 bg-brand-mint text-brand-navy font-semibold rounded-lg card-hover text-lg"
				>
					Back to Home
				</a>
			</div>

			<!-- Suggested Links -->
			<div class="border-t border-gray-200 pt-8">
				<p class="text-sm text-gray-500 mb-4">You might be looking for:</p>
				<div class="flex flex-col tablet:flex-row gap-4 justify-center">
					<a
						href="/curriculum"
						class="text-brand-cyan hover:text-brand-navy transition-colors font-semibold"
					>
						Curriculum
					</a>
					<span class="hidden tablet:inline text-gray-300">•</span>
					<a
						href="/about"
						class="text-brand-cyan hover:text-brand-navy transition-colors font-semibold"
					>
						About TLC
					</a>
					<span class="hidden tablet:inline text-gray-300">•</span>
					<a
						href="mailto:info@tlc-learning.co.uk"
						class="text-brand-cyan hover:text-brand-navy transition-colors font-semibold"
					>
						Contact Us
					</a>
				</div>
			</div>
		</div>
	</div>
</BaseLayout>
